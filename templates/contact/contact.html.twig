{% extends "layout.html.twig" %}


{% block title %}
    {{'Contact'|trans}} - {{ parent() }}
{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-12 well">
                {% if message is not empty %}
                    <p>{{ message }}</p>
                {% endif %}
                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                <div class="form-group">
                    {{ form_label(form.username, 'Votre nom', {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                    <div class="col-sm-4">
                        {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.username) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.email, 'Votre email', {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                    <div class="col-sm-4">
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.email) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.subject, 'Votre sujet', {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                    <div class="col-sm-4">
                        {{ form_widget(form.subject, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.subject) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.message, 'Votre question', {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                    <div class="col-sm-4">
                        {{ form_widget(form.message, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.message) }}
                    </div>
                </div>

                {{ form_rest(form) }}
                <div class="form-group">
                    <div class="col-sm-4 g-recaptcha" data-sitekey="{{ captcha_secret }}"></div>
                </div>
                <input type="submit" id="_submit" name="_submit" value="Envoyer" class="btn btn-success"/>

                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src='{{ captcha_api }}'></script>
{% endblock %}